<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="Insert Page" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="AutoListView.InsertPage">
	<ContentPage.Content>
        <StackLayout Orientation="Vertical" >
            <TableView Intent="Form">
                <TableView.Root>
                    <TableSection Title="Update Item">
                        <EntryCell x:Name="titleCell" Label="Title" Placeholder="Insert Title"></EntryCell>
                        <EntryCell x:Name="descriptionCell" Label="Description" Placeholder="Insert Description"></EntryCell>
                        <ViewCell>
                            <Button x:Name="insertButton" Text="Insert"></Button>
                        </ViewCell>
                    </TableSection>
                </TableView.Root>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
